<span class={{this.computedClass}}>
  {{#if @prefix}}
    <div class="input-group-prepend">
      <span class="input-group-text prefix">
        {{@prefix}}
      </span>
    </div>
  {{/if}}

  <select
    class="form-control"
    id={{this.inputIdComputed}}
    disabled={{@disabled}}
    multiple={{true}}
    ...attributes
    {{on "input" this.multiSelectValueChanged}}
  >
    {{#if this.showNone}}
      <option
        value=""
        selected={{or (not @value) (is-empty @value)}}
        disabled={{this.noneDisabled}}
      >
        {{this.noneLabelComputed}}
      </option>
    {{/if}}
    {{#each @selectOptions as |selectOption|}}
      <option
        value={{selectOption.value}}
        selected={{array-contains @value selectOption.value}}
      >
        {{selectoption-label selectOption}}
      </option>
    {{/each}}
  </select>

  {{#if @suffix}}
    <div class="input-group-append">
      <span class="input-group-text suffix">
        {{@suffix}}
      </span>
    </div>
  {{/if}}
</span>