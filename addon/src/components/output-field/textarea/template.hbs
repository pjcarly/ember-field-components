{{#if (eq this.widgetName "pre")}}
  <Output::Pre
    @value={{this.value}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@outputClass}}
    @options={{this.outputOptions}}
  />
{{else}}
  <Output::Textarea
    @value={{this.value}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@outputClass}}
    @options={{this.outputOptions}}
  />
{{/if}}