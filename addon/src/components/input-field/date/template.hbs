{{#if (or (eq this.widgetName "flatpickr") (eq this.widgetName "bootstrap"))}}
  <Input::DateFlatpickr
    @value={{this.value}}
    @valueChanged={{this.setNewValue}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}}
  />
{{else}}
  <Input::Date
    @value={{this.value}}
    @valueChanged={{this.setNewValue}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}}
  />
{{/if}}