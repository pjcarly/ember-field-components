<span class={{this.computedClass}}>
  {{#if (and @value @prefix)}}
    <span class="prefix">
      {{@prefix}}
    </span>
  {{/if}}
  <span
    data-select-option={{@value}}
    class={{if
      @value
      "value"
      (if @noneLabel "value empty none-label" "value empty")
    }}
    ...attributes
  >
    {{this.selectedLabel}}
  </span>
  {{#if (and @value @suffix)}}
    <span class="suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>