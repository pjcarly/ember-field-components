<span class={{this.computedClass}}>
  {{#if @prefix}}
    <div class="input-group-prepend">
      <span class="input-group-text prefix">{{@prefix}}</span>
    </div>
  {{/if}}
  <Input
    id={{this.inputId}}
    class="form-control"
    @type="datetime-local"
    @value={{this.computedValue}}
    @placeholder={{@placeholder}} />
  {{#if @suffix}}
    <div class="input-group-append">
      <span class="input-group-text suffix">{{@suffix}}</span>
    </div>
  {{/if}}
</span>