<span class={{this.computedClass}}>
  {{#if @prefix}}
    <span class="input-group-text prefix">
      {{@prefix}}
    </span>
  {{/if}}
  <Input
    id={{@inputId}}
    @type="datetime-local"
    @value={{this.computedValue}}
    class="form-control"
    placeholder={{@placeholder}}
    ...attributes
    {{on "input" this.valueChanged}}
  />
  {{#if @suffix}}
    <div class="input-group-append">
      <span class="input-group-text suffix">
        {{@suffix}}
      </span>
    </div>
  {{/if}}
</span>