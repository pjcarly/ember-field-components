{{#if (or (eq this.widgetName 'flatpickr') (eq this.widgetName 'bootstrap'))}}
  <InputTimeFlatpickr
    @value={{this.value}}
    @valueChanged={{action (mut this.value)}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}} />
{{else}}
  <InputTime
    @value={{this.value}}
    @valueChanged={{action (mut this.value)}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}} />
{{/if}}
