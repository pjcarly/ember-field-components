<span class={{this.computedClass}}>
  {{#if @prefix}}
    <span class="prefix">
      {{@prefix}}
    </span>
  {{/if}}
  <span class={{if (or value (eq value 0)) 'value' 'value empty'}}>
    {{format-number value
        style='currency'
        currency=this.currencyComputed
        currencyDisplay=this.fieldInformation.currencyDisplay
        minimumFractionDigits=precision}}
  </span>
  {{#if @suffix}}
    <span class="suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>