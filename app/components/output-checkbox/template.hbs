<span class={{this.computedClass}}>
  {{#if (and @value @prefix)}}
    <span class="prefix">
      {{@prefix}}
    </span>
  {{/if}}
  {{#if @value}}
    <span class="value checked">
      <IconCheckboxChecked />
    </span>
  {{else}}
    <span class="value unchecked">
      <IconCheckboxUnchecked />
    </span>
  {{/if}}
  {{#if (and @value @suffix)}}
    <span class="suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>