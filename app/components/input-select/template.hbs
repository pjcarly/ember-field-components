<select onchange={{action (mut this.computedValue) value='target.value'}} class={{this.computedClass}} id={{@inputId}} disabled={{@disabled}}>
  {{#if this.showNone}}
    {{option-none selected=this.noneSelected disabled=this.noneDisabled label=this.noneLabelComputed}}
  {{/if}}
  {{#each @selectOptions as |selectOption|}}
    {{option-selected selectOption this.computedValue}}
  {{/each}}
</select>
