<span class={{this.computedClass}}>
  {{#if @prefix}}
    <span class="input-group-addon prefix">{{@prefix}}</span>
  {{/if}}

  <select onchange={{action (mut this.computedValue) value='target.value'}} class="form-control" id={{@inputId}} disabled={{@disabled}}>
    {{#if this.showNone}}
      <option selected={{not this.computedValue}} value="" disabled={{this.noneDisabled}}>{{this.noneLabelComputed}}</option>
    {{/if}}
    {{#each @selectOptions as |selectOption|}}
      <option value={{selectOption.value}} selected={{eq selectOption.value this.computedValue}}>{{selectoption-label selectOption}}</option>
    {{/each}}
    {{#if (and @value (not this.selectOptionsContainsValue))}}
      <option value={{@value}} selected={{true}}>{{@value}}</option>
    {{/if}}
  </select>

  {{#if @suffix}}
    <span class="input-group-addon suffix">{{@suffix}}</span>
  {{/if}}
</span>