<span class={{this.computedClass}}>
  {{#if @prefix}}
    <span class="prefix">
      {{@prefix}}
    </span>
  {{/if}}
  <span class={{if (or value (eq value 0)) 'value' 'value empty'}}>
    {{#if (and @options (eq @value @options.positiveINFValue))}}
      +∞
    {{else if (and @options (eq @value @options.negativeINFValue))}}
      -∞
    {{else}}
      {{@value}}
    {{/if}}
  </span>
  {{#if @suffix}}
    <span class="suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>