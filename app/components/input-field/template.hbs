<div class="fg-line{{if hasFocus ' fg-toggled'}}">
  {{#if isBlock}}
    {{field-label labelClass="control-label fg-label" for=inputId model=model field=field label=label}}
  {{/if}}

  {{#if isReadOnly}}
    {{output-field model=model field=field inline=true link=false}}
  {{else}}
    {{component componentName model=model field=field placeholder=placeholder styleClass=styleClass prefix=prefix suffix=suffix minDate=minDate maxDate=maxDate showButton=showButton inputId=inputId valueChanged=(action 'valueChanged')}}
  {{/if}}
</div>
{{field-messages model=model field=field}}
