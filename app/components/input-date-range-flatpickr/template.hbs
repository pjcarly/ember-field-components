<span class={{this.computedClass}}>
  {{#if @prefix}}
    <span class="input-group-text prefix">
      {{@prefix}}
    </span>
  {{/if}}

  <EmberFlatpickr
    id={{this.inputIdComputed}}
    class="form-control"
    placeholder={{@placeholder}}
    autocomplete="off"
    @disabled={{@disabled}}
    @date={{this.flatpickrValue}}
    @dateFormat={{this.flatpickrFormat}}
    @minDate={{this.minDate}}
    @maxDate={{this.maxDate}}
    @mode="range"
    @onChange={{this.setFlatpickrValue}}
    @onReady={{this.onReady}}
    @locale={{hash firstDayOfWeek=1}}
  />

  {{#if this.showButton}}
    <button
      type="button"
      class="btn{{if
          @options.btnClass
          (concat ' ' @options.btnClass)
          ' btn-default'
        }}"
      {{on "click" this.toggleCalendar}}
    >
      <IconCalendar />
    </button>
  {{/if}}
  {{#if @suffix}}
    <span class="input-group-text suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>