<span class={{this.computedClass}}>
  {{#if @prefix}}
    <div class="input-group-prepend">
      <span class="input-group-text prefix">{{@prefix}}</span>
    </div>
  {{/if}}
  <Textarea 
    @value={{@value}} 
    @id={{@inputId}}
    disabled={{@disabled}}
    rows='3' 
    class='form-control' 
    placeholder={{@placeholder}} 
    {{on "input" this.valueChanged}}
    ...attributes />
  {{#if @suffix}}
    <div class="input-group-append">
      <span class="input-group-text suffix">{{@suffix}}</span>
    </div>
  {{/if}}
</span>