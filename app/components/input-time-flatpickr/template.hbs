<span class={{this.computedClass}}>
  {{#if @prefix}}
    <span class="input-group-addon prefix">{{@prefix}}</span>
  {{/if}}

  <EmberFlatpickr
    @id={{this.inputIdComputed}}
    @date={{this.computedValue}}
    @flatpickrRef={{this.flatpickr}}
    @dateFormat={{this.flatpickrFormat}}
    @minDate={{this.minDate}}
    @maxDate={{this.maxDate}}
    @allowInput={{true}}
    @enableTime={{true}}
    @noCalendar={{true}}
    @time_24hr={{true}}
    @placeholder={{@placeholder}}
    @autocomplete="off"
    @class="form-control"
    @onChange={{action (mut this.computedValue)}} />

  {{#if @suffix}}
    <span class="input-group-addon suffix">{{@suffix}}</span>
  {{/if}}
  {{#if @showButton}}
    <span class="input-group-btn">
      <button type="button" class="btn{{if options.btnClass (concat ' ' options.btnClass) ' btn-default'}}" {{on "click" this.toggleCalendar}}>
        ðŸ“…
      </button>
    </span>
  {{/if}}
</span>