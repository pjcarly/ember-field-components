{{#if (or (eq this.widgetName 'flatpickr') (eq this.widgetName 'bootstrap'))}}
  <InputDatetimeFlatpickr
    @value={{this.value}}
    @valueChanged={{this.setNewValue}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}}/>
{{else}}
  <InputDatetime
    @value={{this.value}}
    @valueChanged={{this.setNewValue}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}}/>
{{/if}}
