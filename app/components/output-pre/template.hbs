<span class={{this.computedClass}}>
  {{#if (and @value @prefix)}}
    <span class="prefix">
      {{@prefix}}
    </span>
  {{/if}}
  <pre class={{if @value "value" "value empty"}} ...attributes>{{!--
    --}}{{if @value @value " "}}{{!--
  --}}</pre>
  {{#if (and @value @suffix)}}
    <span class="suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>