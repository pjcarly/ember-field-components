{{#if (eq this.widgetName "resizeable")}}
  <InputTextareaResizeable
    @value={{this.value}}
    @valueChanged={{this.setNewValue}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}}
  />
{{else}}
  <InputTextarea
    @value={{this.value}}
    @valueChanged={{this.setNewValue}}
    @preSetHook={{@preSetHook}}
    @placeholder={{@placeholder}}
    @class={{@inputClass}}
    @inputId={{@inputId}}
    @options={{this.inputOptions}}
  />
{{/if}}