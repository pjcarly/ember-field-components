<span class={{this.computedClass}}>
  {{#if (and @value @prefix)}}
    <span class="prefix">
      {{@prefix}}
    </span>
  {{/if}}
  <span class="toggle-switch value">
    {{#if @value}}
      <input type="checkbox" hidden="hidden" checked="checked" />
      <span class="ts-helper"></span>
    {{else}}
      <span class="ts-helper"></span>
    {{/if}}
  </span>
  {{#if (and @value @suffix)}}
    <span class="suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>