{{#if hasPrefix}}
  <span class="input-group-addon prefix">{{prefix}}</span>
{{/if}}
{{input type='text' value=computedValue class=inputStyleClass placeholder=placeholder id=inputId}}
{{#if hasSuffix}}
  <span class="input-group-addon suffix">{{suffix}}</span>
{{/if}}
{{#if showButton}}
  <span class="input-group-btn">
    <button type="button" class="btn{{if options.btnClass (concat ' ' options.btnClass) ' btn-default'}}" {{action 'toggleCalendar'}}>
      <i class="fa fa-calendar" aria-hidden="true"></i>
    </button>
  </span>
{{/if}}
